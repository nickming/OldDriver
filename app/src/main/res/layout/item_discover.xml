<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/iv_discover_head"
        android:layout_width="40dp"
        android:src="@mipmap/head4"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_discover_name"
        android:text="name"
        android:textSize="16sp"
        android:textColor="@color/primary_text_color"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_discover_content"
        android:text="contetttttttttttttttttttt"
        android:layout_below="@id/tv_discover_name"
        android:textColor="@color/secondary_text_color"
        android:layout_marginLeft="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/tv_discover_date"
        android:layout_marginLeft="70dp"
        android:layout_below="@id/tv_discover_content"
        android:layout_width="wrap_content"
        android:text="3小时前"
        android:textSize="10sp"
        android:textColor="@color/secondary_text_color"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_alignParentBottom="true"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1px" />


</RelativeLayout>