<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/white">

        <include layout="@layout/view_divider"></include>

        <ImageView
            android:id="@+id/iv_mime_username"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_mime_username"
            android:textColor="@color/primary_text_color"
            android:text="Username"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_mime_phone"
            android:text="Phone"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <include layout="@layout/view_divider"></include>

    <RelativeLayout
        android:id="@+id/rl_mime_salary_count"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/white">

        <include layout="@layout/view_divider"></include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="工资统计"
            android:textColor="@color/primary_text_color" />
    </RelativeLayout>

    <include layout="@layout/view_divider"></include>

    <RelativeLayout
        android:id="@+id/rl_mime_collect"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="收藏"
            android:textColor="@color/primary_text_color" />
    </RelativeLayout>

    <include layout="@layout/view_divider"></include>
    <RelativeLayout
        android:id="@+id/rl_mime_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="设置"
            android:textColor="@color/primary_text_color" />
    </RelativeLayout>

    <include layout="@layout/view_divider"></include>
    <RelativeLayout
        android:id="@+id/rl_mime_exit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="退出"
            android:textColor="@color/primary_text_color" />
    </RelativeLayout>

    <include layout="@layout/view_divider"></include>

</LinearLayout>